<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.quockhach_calculator">

    <application
        android:icon="@drawable/calculator"
        android:label="@string/app_name"
        android:hardwareAccelerated="true"
        android:theme="@style/CalculatorTheme">

        <activity
            android:name="com.android.quockhach_calculator.StartActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.APP_CALCULATOR" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.android.quockhach_calculator.CalculatorGB"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <activity
            android:name="com.android.quockhach_calculator.CalculatorL"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateAlwaysHidden" />

    </application>

</manifest>
